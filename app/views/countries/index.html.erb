<h1>Countries#index</h1>
<p>Find me in app/views/countries/index.html.erb</p>


<div class="container">
  <div class="row">
  <% @countries.each do |country|%>
    <div class="col-sm-6 col-md-3">
      <div class="card">
        <img src="http://kitt.lewagon.com/placeholder/cities/rio" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-text"> <strong><%= country.name  %> </strong> / <%= country.continent %> </h5>
          <p class="card-text"> <br>
          "<%= country.description %>"</p>

          <a href="#" class="btn btn-primary">Louer ce pays</a>
        </div>
    </div>
  </div>
<% end  %>


</div>



</div>
